<Window x:Class="MultiMeter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <CheckBox IsChecked="{Binding IsNegative}">IsNeg</CheckBox>
            <CheckBox IsChecked="{Binding IsAC}">IsAC</CheckBox>
            <CheckBox IsChecked="{Binding IsDC}">IsDC</CheckBox>
            <TextBlock Text="{Binding Value}"/>
           
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Scaling}"/>
                <TextBlock Text="{Binding Unit}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
